{
	"manifest_version": 3,
	"name": "Simple Nostter",
	"version": "0.0.0.2",
	"description": "A simplified display of nostter's Home Timeline.",
	"author": "mitsugu oyama (online nick name OrzBruford)",
	"developer": {
		"name": "mitsugu oyama (online nick name OrzBruford)",
		"url": "https://orzbruford.nobody.jp/"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "simpleNostter@mitsugu.ne.jp"
		}
	},
	"icons": {
		"16": "icons/16.png",
		"32": "icons/32.png",
		"48": "icons/48.png",
		"64": "icons/64.png",
		"96": "icons/96.png",
		"128": "icons/128.png",
		"192": "icons/192.png"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [{
		"matches": ["https://nostter.app/home"],
		"js": ["page.js"]
	}],
	"permissions": [
		"webNavigation",
		"tabs",
		"activeTab"
	]
}
